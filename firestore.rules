rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() { 
      return request.auth != null; 
    }
    
    function isMember(listId) {
      return isAuthed() &&
        exists(/databases/$(database)/documents/lists/$(listId)/members/$(request.auth.uid));
    }
    
    function role(listId) {
      return get(/databases/$(database)/documents/lists/$(listId)/members/$(request.auth.uid)).data.role;
    }

    // User documents
    match /users/{uid} {
      allow read, write: if isAuthed() && request.auth.uid == uid;
      
      // Entitlements subcollection (Pro status)
      match /entitlements/{entitlementId} {
        allow read: if isAuthed() && request.auth.uid == uid;
        allow write: if false; // Only through Functions/webhooks
      }
    }

    // List documents
    match /lists/{listId} {
      allow create: if isAuthed() && request.auth.uid == request.resource.data.createdBy;
      allow read: if isAuthed() && request.auth.uid in resource.data.members;
      allow update, delete: if isMember(listId) && role(listId) in ['owner','editor'];
    }

    // List members
    match /lists/{listId}/members/{uid} {
      allow read: if isMember(listId);
      // Allow user to create their own member document (for list creation)
      // Note: invites are handled through Functions, which has admin access
      allow create: if isAuthed() && request.auth.uid == uid && request.resource.data.role == 'owner';
      // Only owners can update members
      allow update: if isMember(listId) && role(listId) == 'owner';
      // Owners can delete members, or members can delete themselves (leave)
      allow delete: if isMember(listId) && (role(listId) == 'owner' || request.auth.uid == uid);
    }

    // List items
    match /lists/{listId}/items/{itemId} {
      allow read: if isMember(listId);
      allow create, update, delete: if isMember(listId);
    }

    // Invites
    match /invites/{inviteId} {
      // Anyone authenticated can read invites to check if they exist
      allow read: if isAuthed();
      
      // Only list owners can create invites (handled via Functions)
      allow create: if false; // Only through Functions
      
      // Only list owners can update invites (for revoking)
      allow update: if isAuthed() 
        && resource.data.listId is string
        && exists(/databases/$(database)/documents/lists/$(resource.data.listId)/members/$(request.auth.uid))
        && get(/databases/$(database)/documents/lists/$(resource.data.listId)/members/$(request.auth.uid)).data.role == 'owner'
        && request.resource.data.revoked == true; // Only allow setting revoked to true
      
      // Only the creator or list owners can delete invites
      allow delete: if isAuthed() && 
        (resource.data.createdBy == request.auth.uid ||
         (exists(/databases/$(database)/documents/lists/$(resource.data.listId)/members/$(request.auth.uid))
          && get(/databases/$(database)/documents/lists/$(resource.data.listId)/members/$(request.auth.uid)).data.role == 'owner'));
    }
  }
}